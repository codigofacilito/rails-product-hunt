<%= form_with model:[@product, Comment.new] do |form| %>

    <div class="mt-4">
        <%= form.text_area :content, placeholder:"Deja tu comentario", class:"relative mb-2 md:mb-0 w-full py-4 pl-4 text-sm border rounded resize-none bg-gray-50" %> 
    </div>

    <div class="mt-4">
        <%= form.submit "Comentar", class:"cursor-pointer inline-block  py-4 px-8 leading-none text-white bg-red-600 hover:bg-red-700 font-semibold rounded shadow" %>
    </div>

<% end %>